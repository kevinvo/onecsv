{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true // add for prettier usage
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier" // add for prettier usage
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "camelcase": "error",
        "spaced-comment": "error",
        "quotes": ["error", "single"],
        "no-duplicate-imports": "error"
        // read more rules at: https://eslint.org/docs/rules/
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
